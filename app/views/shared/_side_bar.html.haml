.side-bar
  .side-bar__user-name
    .top-items
      %h3.top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('fa', 'edit', class: 'top-items__icon')
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class: 'top-items__icon')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__latest-message
            = group.show_last_message